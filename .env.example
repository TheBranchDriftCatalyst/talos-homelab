# Tilt Development Environment Configuration
# Copy this file to .env and customize for your setup
# The dotenv extension loads these variables into the Tiltfile

# ===========================================
# Kubernetes Configuration
# ===========================================

# Kubernetes context to use (default: admin@homelab-single)
# K8S_CONTEXT=admin@homelab-single

# Talos node IP address
TALOS_NODE=192.168.1.54

# ===========================================
# Flux Configuration
# ===========================================

# Whether to suspend Flux during Tilt development (default: true)
# Set to false if you want Flux to keep reconciling while using Tilt
# FLUX_SUSPEND=true

# ===========================================
# Service Credentials (for development only)
# ===========================================
# These are convenience variables for local development
# Production secrets should use External Secrets Operator with 1Password

# Grafana admin password (default: prom-operator from Helm chart)
# GRAFANA_PASSWORD=prom-operator

# Graylog admin password
# GRAYLOG_PASSWORD=admin

# ===========================================
# Development Options
# ===========================================

# Enable verbose logging in Tilt
# TILT_VERBOSE=true

# Default namespace for development deployments
# DEV_NAMESPACE=default

# ===========================================
# External Services
# ===========================================

# NFS server addresses (if different from defaults)
# TRUENAS_IP=192.168.1.10
# SYNOLOGY_IP=192.168.1.20

# Docker registry (for local image builds)
# REGISTRY_HOST=localhost:5000
