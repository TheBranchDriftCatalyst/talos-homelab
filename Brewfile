# Brewfile for Talos Homelab Development Tools
# Install with: brew bundle

# Git hooks manager
brew "lefthook"

# Secret scanning
brew "gitleaks"

# YAML linting
brew "yamllint"

# Shell script linting
brew "shellcheck"

# Shell script formatting
brew "shfmt"

# Kubernetes tools
brew "kubectl"
brew "kustomize"
brew "helm"

# FluxCD
tap "fluxcd/tap"
brew "fluxcd/tap/flux"

# Talos
tap "siderolabs/tap"
brew "siderolabs/tap/talosctl"

# Task runner
brew "go-task"

# Local development
brew "tilt"   # Local development tool (uses Talos local cluster)

# Optional: K9s for cluster management
brew "k9s"

# Optional: Kubectx/kubens for context switching
brew "kubectx"
