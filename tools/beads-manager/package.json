{
  "name": "@thebranchdriftcatalyst/beads-manager",
  "version": "0.1.0",
  "description": "Visual issue manager UI for Beads - dependency graph visualization and issue management",
  "type": "module",
  "bin": {
    "beads-manager": "./dist/server/cli.js"
  },
  "files": [
    "dist",
    "scripts/beads-ui"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:client": "vite",
    "dev:server": "tsx watch src/server/index.ts",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build",
    "build:server": "tsc --project tsconfig.server.json",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "docker:build": "docker build -t beads-manager .",
    "docker:run": "./scripts/beads-ui",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/TheBranchDriftCatalyst/talos-homelab.git",
    "directory": "tools/beads-manager"
  },
  "keywords": [
    "beads",
    "issue-tracker",
    "project-management",
    "dependency-graph",
    "cli"
  ],
  "author": "TheBranchDriftCatalyst",
  "license": "MIT",
  "dependencies": {
    "@milkdown/core": "^7.6.0",
    "@milkdown/ctx": "^7.6.0",
    "@milkdown/plugin-listener": "^7.6.0",
    "@milkdown/preset-commonmark": "^7.6.0",
    "@milkdown/preset-gfm": "^7.6.0",
    "@milkdown/react": "^7.6.0",
    "@milkdown/theme-nord": "^7.6.0",
    "@xyflow/react": "^12.3.6",
    "chokidar": "^4.0.1",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "dagre": "^0.8.5",
    "elkjs": "^0.11.0",
    "express": "^4.21.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.5.4",
    "wouter": "^3.3.5",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/dagre": "^0.7.52",
    "@types/express": "^4.17.21",
    "@types/node": "^22.10.1",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@types/ws": "^8.5.13",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.19",
    "concurrently": "^9.1.0",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.3",
    "tsx": "^4.19.2",
    "typescript": "^5.4.5",
    "vite": "^5.2.0"
  }
}
